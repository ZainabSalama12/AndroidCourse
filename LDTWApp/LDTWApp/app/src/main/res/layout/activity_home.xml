<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbackground"
    tools:context=".HomeActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
  <com.google.android.material.navigation.NavigationView
      android:id="@+id/navgView"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      app:headerLayout="@layout/header"
      app:menu="@menu/main_menu" />
  <RelativeLayout
      android:id="@+id/relativeLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/newbackground">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/homeToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/menu" />
    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="1"
        android:background="@drawable/newbackground"
        android:orientation="horizontal">
      <LinearLayout
          android:id="@+id/helloTextLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/profileLayout"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="60dp"
          android:layout_weight="1"
          android:background="@drawable/newbackground"
          android:orientation="horizontal">
        <TextView
            android:id="@+id/helloText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bubblegum_sans"
            android:text="Hello!"
            android:textColor="@color/navyBlue"
            android:textSize="65dp"
            android:textStyle="bold" />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/profileIconLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="20dp"
          android:layout_weight="1"
          android:background="@drawable/newbackground"
          android:orientation="horizontal">
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            tools:srcCompat="@tools:sample/avatars" />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Box0"
        android:layout_width="6000dp"
        android:layout_height="90dp"
        android:layout_below="@+id/profileLayout"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/box1"
        android:orientation="vertical"
        android:weightSum="1">
      <TextView
          android:id="@+id/textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/bubblegum_sans"
          android:text="Let's discover this world "
          android:textColor="@color/white"
          android:textColorHighlight="@color/purple_200"
          android:textSize="30sp"
          android:textStyle="italic|bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Box0"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:weightSum="2">
      <LinearLayout
          android:id="@+id/greenLayout"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginEnd="20dp"
          android:layout_weight="1"
          android:background="@drawable/backofbox1"
          android:orientation="vertical">
        <ImageView
            android:id="@+id/animalsImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/animal" />
        <TextView
            android:id="@+id/animalsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/antic"
            android:text="Animals"
            android:textColor="@color/grey"
            android:textSize="30sp"
            android:textStyle="bold" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/yellowLayout"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginEnd="20dp"
          android:layout_weight="1"
          android:background="@drawable/backofbox2"
          android:orientation="vertical">
        <ImageView
            android:id="@+id/colorsImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/colors" />
        <TextView
            android:id="@+id/colorsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/antic"
            android:text="colors"
            android:textColor="@color/grey"
            android:textSize="30sp"
            android:textStyle="bold" />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/box2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

      <LinearLayout
          android:id="@+id/orangeLayout"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginEnd="20dp"
          android:layout_weight="1"
          android:background="@drawable/backofbox3"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/spaceImage"
            android:layout_width="140dp"
            android:layout_height="147dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/space" />

        <TextView
            android:id="@+id/spaceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/antic"
            android:text="Space"
            android:textColor="@color/grey"
            android:textSize="30sp"
            android:textStyle="bold" />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/redLayout"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginEnd="20dp"
          android:layout_weight="1"
          android:background="@drawable/backofbox4"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/alphabetImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/alphabet_img" />
        <TextView
            android:id="@+id/alphabetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alphabetImage"
            android:layout_gravity="center"
            android:fontFamily="@font/antic"
            android:text="Alphabet"
            android:textColor="@color/grey"
            android:textSize="30dp"
            android:textStyle="bold" />
      </LinearLayout>
    </LinearLayout>
  </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>